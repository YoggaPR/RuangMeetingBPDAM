@model Facilities

@{
    DateTime DateNow = DateTime.Now;
    string dateNow = DateNow.ToString("dd/MM/yyyy");
    string dayNow = DateNow.ToString("dddd");
    string timeNow = DateNow.ToString("HH:mm");

    string startTime = Model.StartTime.ToString("HH:mm");
    string startDate = Model.StartDate.ToString("dd/MM/yyyy");

    string endTime = Model.EndTime.ToString("HH:mm");
    string endDate = Model.EndDate.ToString("dd/MM/yyyy");

    //string startDate = Model.StartDate.ToString();
